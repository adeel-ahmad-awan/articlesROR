<h1 align="center">Listing All Categories</h1>

<div align="center">
  <%= will_paginate %>
  <% @catagories.each do |catagory| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{catagory.name}", catagory_path(catagory) %>
          </li>
          <li><small><%= pluralize(catagory.articles.count, "article") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
